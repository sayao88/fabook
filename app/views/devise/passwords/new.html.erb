<section class="layout-section-for-reading">
  <div class="layout-section__inner-wrap">
    <span class="adj-layout-first"> </span>
    <div class="mod-heading-lv1">
      <h1 class="heading__h-element">
          <span class="heading__span">パスワード再設定</span>
      </h1>
    <!--/.mod-heading-lv1--></div>
    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="actions">
        <%= f.submit "再設定メールを送信する", class: "btn btn-primary btn-block"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <span class="adj-layout-end"> </span>
  </div>
</section>
