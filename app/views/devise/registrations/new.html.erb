<div class="container">
<span class="adj-layout-first"> </span>

    <div class="layout-box-login">
        <div class="layout-box__first-wrap">
            <div class="mod-heading-lv1-0005">
                <h2 class="heading__h-element">
                    <span class="heading__span">サインイン</span>
                </h2>
            <!--/.mod-heading-lv1--></div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_messages! %>

              <div class="field">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "メールアドレス" %>
              </div>
                <br>
              <div class="field">
                <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
              </div>
                <br>
                      
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "パスワード" %>
              </div>
                      <br>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "パスワード（確認）" %>
              </div>

              <div class="actions">
                <%= f.submit "サインイン", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

        </div>
    <!--/.layout-box-login--></div>


</div>