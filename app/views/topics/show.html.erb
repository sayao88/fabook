
<% if notice then %>
    <div class="layout-box-info">
        <div class="layout-box__first-wrap">
            <p class="mod-p-default"><%= notice %></p>
        </div>
    <!--/.layout-box--></div>
<% end %>

<section class="layout-section-for-reading">
  <div class="layout-section__inner-wrap">
    <span class="adj-layout-first"> </span>

    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @topic.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @topic.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @topic.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'topic_comments/index', locals: { comments: @comments, topic: @topic } %>
    </div>
    <%= render partial: 'topic_comments/form', locals: { comment: @comment, topic: @topic } %>
    
    <% if current_user.id == @topic.user_id %>
      <p class="mod-p text-center"><%= link_to '編集', edit_topic_path(@topic) %></p>
    <% end %>
    <%= link_to "ホームに戻る", root_path, class: 'btn btn-default' %>

    
    <span class="adj-layout-end"> </span>
  </div>
</section>
